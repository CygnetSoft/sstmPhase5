@model SSTM.Helpers.App.AppSession

<!-- Left navbar links -->
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
        @if (Model.UserRole == "Administration" || Model.UserRole == "Director")
        {
            <a id="anchorTrainingCenterName" class="anchorTrainingCenterName" href="@Url.Action("Index", "AdminHome", new { area = "Administration" })">
                @Model.UserRole
            </a>
        }
        else if (Model.UserRole == "Trainer" || Model.UserRole == "Print Incharge")
        {
            <a id="anchorTrainingCenterName"  class="anchorTrainingCenterName" href="@Url.Action("SharedCoursesList", "Course")">
                @Model.UserRole
            </a>
        }
        else
        {
            <a id="anchorTrainingCenterName"  class="anchorTrainingCenterName" href="@Url.Action("Index", "Course")">
                @Model.UserRole
            </a>
        }
    </li>
</ul>

<!-- Right navbar links -->
<ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
            @Model.UserName&nbsp;<i class="far fa-user" style="margin-left:10px;"></i>
        </a>

        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <a href="#" class="dropdown-item">
                <i class="fas fa-envelope mr-2"></i>
                <i class="glyphicon-user"></i><label> @Model.UserEmail</label>
            </a>

            <div class="dropdown-divider"></div>

            <a href="@Url.Action("Signout","Login", new { area="Administration"})" class="dropdown-item" id="Logout">
                <i class="fas fa-sign-out-alt mr-2"></i>
                <i class="icon-switch2"></i> Sign out
            </a>
        </div>
    </li>
</ul>