
@{
    ViewBag.Title = "Developer Monitor List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Theme/datatables")
<!-- Main content -->
<section class="content" style="padding-top:10px;">
    <!-- Default box -->
    <div class="card col-md-12">
        <div class="card-header row">
            <div class="col-9">
                <h3 class="card-title"> </h3>
            </div>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label>Developer</label>
                        @Html.DropDownList("userlist", new SelectList(TempData["userlist"] as SelectList, "Value", "Text"), new { @class = "airlinecourse form-control" })

                    </div>
                    <div class="col-md-3 form-group">
                        <label>Start date</label>
                        <input type="text" id="startdate" class="form-control input_date"  placeholder='DD/MM/YYYY' required />
                    </div>
                    <div class="col-md-3 form-group">
                        <label>End date</label>
                        <input type="text" id="enddate" class="form-control input_date"  placeholder='DD/MM/YYYY' required />
                    </div>
                    <div class="col-md-3 form-group">
                        <a href="javascript:void(0)" id="btnDeveloperMonitorsubmit" style="padding-top: 4px;
    margin-top: 1.9em !important;" class="btn btn-success mt-4">show</a>
                    </div>
                </div>
            </div>
            <table id="tblDeveloperMonitor" class="table">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Date</th>
                        <th>In Time</th>
                        <th>Out Time</th>
                        <th>Total time</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</section>

@section scripts{
    @Scripts.Render("~/Theme/datatablesjs")
    <script>
        var GetDeveloperMonitorListUrl = '@Url.Action("GetDeveloperMonitorList", "AssessmentPaper")';
        $(function () {
            $('.input_date').datepicker({
                todayBtn: "linked",
                autoclose: true,
                todayHighlight: true,
                format: "dd/mm/yyyy"
            });
        });
    </script>
    <script src="~/Scripts/AssessmentPaper/index.js"></script>
}






