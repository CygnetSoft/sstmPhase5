@model  List<SSTM.Models.MemorandomModel>
@{
    ViewBag.Title = "Memorandom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Theme/datatables")
<section class="content" style="padding-top:10px;">
    <!-- Default box -->
    <div class="card col-md-12">
        <div class="card-header btn-primary row">
            <div class="col-9">
                <h3 class="card-title">Memorandom List </h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <table class="table table-bordered" id="tblMemorandom">
                    <thead>
                        <tr>
                            <th>
                                Memorandom Name
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].MemorandomName</td>
                                <td><a href="@Model[i].MemorandomPath" target="_blank">@Model[i].Memorandomimagename</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
@section scripts{

    @Scripts.Render("~/Theme/datatablesjs")

    <script>
        $("#tblMemorandom").DataTable();
    </script>
}

