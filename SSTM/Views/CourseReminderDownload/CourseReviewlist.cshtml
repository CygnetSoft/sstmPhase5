@model  List<SSTM.Models.CourseReminderDownload.GetDCRModel>
@{
    ViewBag.Title = "Course Review list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Theme/datatables")

<section class="content" style="padding-top:10px;">
    <!-- Default box -->
    <div class="card col-md-12">
        <div class="card-header row">
            <div class="col-9">
                <h3 class="card-title">Course Review List</h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 table-responsive">
                    <table id="tblaebcoure" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Docid</th>
                                <th>Title</th>
                                <th class="text-center" style="width:8%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Docid
                                    </td>
                                    <td>
                                        @item.Tittle
                                    </td>
                                    <td>
                                        <a href='javascript:void(0)' onclick="Download(@item.Id)">Download</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@section scripts{
    @Scripts.Render("~/Theme/datatablesjs")
    <script>
        $(document).ready(function () {
            $("#tblaebcoure").DataTable();
        });
        function Download(id)
        {
            window.location.href = '@Url.Action("CourseReviewDownload", "CourseReminderDownload")?id=' + id;
        }
    </script>
}




