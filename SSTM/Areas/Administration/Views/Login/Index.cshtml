@model SSTM.Models.Login.LoginModel

@{
    ViewBag.Title = "Administration Login";
    Layout = "~/Areas/Administration/Views/Shared/_LoginLayout.cshtml";
}

<!-- /.login-logo -->
<div class="card">
    <div class="card-header">
        <div class="login-logo">
            <img class="img-responsive" src="~/Theme/images/eversafe-logo-.png" width="150" height="50"/>
        </div>
    </div>

    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to <strong>SSTM</strong></p>

        @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "frmLogin", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "alert-danger" })
            </div>

            <div class="form-group">
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = "Password" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "alert-danger" })
            </div>

            @*<div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <label for="RememberMe">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>*@

            <button type="submit" class="btn btn-primary btn-block">Sign In</button>

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        }
    </div>
    <!-- /.login-card-body -->
</div>

@section scripts{
    <script>
        var indexUrl = '@Url.Action("Index", "Login", new { area="Administration"})';
    </script>

    <script src="~/Scripts/administration/login/index.js"></script>
}